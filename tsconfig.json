{
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "target": "ES6",
    "module": "none",
    "declaration": true,
    "removeComments": false,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "listFiles": false,
    "traceResolution": false,
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "types" : [
    ]
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "compileOnSave": false
}
