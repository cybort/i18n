{
  "compilerOptions": {
    "target": "es5",
    "module": "none",
    "declaration": true,
    "removeComments": false,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "lib": [
      "es5",
      "dom"
    ],
    "types": []
  },
  "include": [
    "./*.ts"
  ],
  "compileOnSave": false
}